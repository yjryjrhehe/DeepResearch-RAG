# 全局
LOG_LEVEL=INFO

# =========================
# Docling（解析/增强）
# =========================
DOCLING_IMAGES_SCALE=2.0
DOCLING_DO_FORMULA_RECOGNITION=true
DOCLING_DO_TABLE_ENRICHMENT=true
DOCLING_DO_PIC_ENRICHMENT=true
DOCLING_DO_OCR=false
DOCLING_ACCELERATOR_DEVICE=CPU
DOCLING_ACCELERATOR_NUM_THREADS=4

# Docling VLM（图像/公式/表格增强，需 OpenAI 兼容的图文接口）
DOCLING_VLM_API_KEY=YOUR_KEY
DOCLING_VLM_BASE_URL=http://localhost:8001/v1
DOCLING_VLM_MODEL=YOUR_VLM_MODEL
DOCLING_VLM_MAX_CONCURRENCY=3

# Docling LLM（部分增强/修复可能使用）
DOCLING_LLM_API_KEY=YOUR_KEY
DOCLING_LLM_BASE_URL=http://localhost:8001/v1
DOCLING_LLM_MODEL=YOUR_LLM_MODEL
DOCLING_LLM_MAX_CONCURRENCY=3

# =========================
# 文本块预处理（摘要/问题）
# =========================
PREPROCESSING_LLM_API_KEY=YOUR_KEY
PREPROCESSING_LLM_BASE_URL=http://localhost:8001/v1
PREPROCESSING_LLM_MODEL=YOUR_LLM_MODEL
PREPROCESSING_LLM_MAX_CONCURRENCY=3

# =========================
# Embedding（向量化）
# =========================
EMBEDDING_LLM_API_KEY=YOUR_KEY
EMBEDDING_LLM_BASE_URL=http://localhost:8001/v1
EMBEDDING_LLM_MODEL=YOUR_EMBED_MODEL
EMBEDDING_LLM_DIMENSION=2560
EMBEDDING_LLM_MAX_CONCURRENCY=5

# =========================
# Query Rewrite（检索增强）
# =========================
REWRITE_LLM_API_KEY=YOUR_KEY
REWRITE_LLM_BASE_URL=http://localhost:8001/v1
REWRITE_LLM_MODEL=YOUR_LLM_MODEL
REWRITE_LLM_MAX_CONCURRENCY=30

# =========================
# Answer / 图谱抽取（可复用同一 LLM）
# =========================
RESEARCH_LLM_API_KEY=YOUR_KEY
RESEARCH_LLM_BASE_URL=http://localhost:8001/v1
RESEARCH_LLM_MODEL=YOUR_LLM_MODEL
RESEARCH_LLM_MAX_CONCURRENCY=30

# =========================
# TEI Rerank（重排服务）
# =========================
TEI_RERANK_BASE_URL=http://localhost:8082
TEI_RERANK_API_KEY=
TEI_RERANK_MAX_CONCURRENCY=50
TEI_RERANK_TIMEOUT=30.0

# =========================
# OpenSearch（向量库/混合检索）
# =========================
OPENSEARCH_INDEX_NAME=rag_system_chunks_async
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_AUTH=admin:admin
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_BULK_CHUNK_SIZE=500

# =========================
# Redis（query embedding 缓存）
# =========================
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
REDIS_EMBEDDING_TTL_SECONDS=604800

# =========================
# Neo4j（知识图谱）
# =========================
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=

# =========================
# KG（知识图谱运行参数）
# =========================
KG_EXTRACT_MAX_CONCURRENCY=3
KG_QUERY_TOP_K_ENTITIES=10
KG_QUERY_TOP_K_CHUNKS=20

